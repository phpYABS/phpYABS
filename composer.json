{
    "name": "phpyabs/phpyabs",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Davide Bellettini",
            "email": "davide.bellettini@gmail.com"
        }
    ],
    "config": {
        "bin-dir": "bin/",
        "sort-packages": true
    },
    "require": {
        "php": "^8.1",
        "adodb/adodb-php": "5.*",
        "slim/psr7": "^1.5",
        "slim/slim": "^4.9"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.5",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "PhpYabs\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpYabs\\Tests\\": "tests"
        }
    }
}
