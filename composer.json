{
    "name": "phpyabs/phpyabs",
    "description": "Open source used book managment software. Ugly code, it was my very first project in 2003",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Davide Bellettini",
            "email": "davide.bellettini@gmail.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-pdo": "*",
        "doctrine/dbal": "^3.3",
        "ronanguilloux/isocodes": "^2.3",
        "slim/psr7": "^1.5",
        "slim/slim": "^4.9",
        "slim/twig-view": "^3.3"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.42",
        "friendsofphp/php-cs-fixer": "^3.73",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.0",
        "rector/rector": "^2.0"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "PhpYabs\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PhpYabs\\Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    }
}
