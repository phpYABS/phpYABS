{
    "name": "phpyabs/phpyabs",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Davide Bellettini",
            "email": "davide.bellettini@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "adodb/adodb",
                "version": "5.18",
                "dist": {
                    "url": "http://downloads.sourceforge.net/project/adodb/adodb-php5-only/adodb-518-for-php5/adodb518a.zip",
                    "type": "zip"
                },
                "autoload": {
                    "files": ["adodb.inc.php"]
                }
            }
        }
    ],
    "config": {
        "bin-dir": "bin/"
    },
    "require": {
        "adodb/adodb": "5.*",
        "silex/silex": "1.0.*@dev"
    },
    "require-dev": {
        "behat/behat": "2.4.*@stable",
        "behat/mink-extension": "*",
        "behat/mink-selenium-driver": "*"
    }
}
