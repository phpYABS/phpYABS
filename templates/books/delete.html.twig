{% extends "base.html.twig" %}
{% block title %}{{ 'book.delete.title'|trans }}{% endblock title %}
{% block content %}
{% if deleted %}
    <p class="success-message">{{ 'book.delete.success'|trans }}</p>
{% else %}
    <h1>{{ 'book.delete.warning'|trans }}</h1>
    <h2>{{ 'book.delete.confirm'|trans }}</h2>
    <p class="warning-message">{{ 'book.delete.irreversible'|trans }}</p>
    {% if book %}
        {% include 'books/tabdel.html.twig' %}
    {% else %}
        <div class="book-search">
            <form action="/books/delete" method="post">
                <label for="ISBN">{{ 'book.fields.isbn'|trans }}</label>
                <input type="text" id="ISBN" name="ISBN" required>
                <button type="submit">{{ 'book.delete.search.button'|trans }}</button>
            </form>
        </div>
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const isbnInput = document.querySelector('input[name="ISBN"]');
                if (isbnInput) {
                    isbnInput.focus();
                }
            });
        </script>
    {% endif %}
{% endif %}
{% endblock content %}