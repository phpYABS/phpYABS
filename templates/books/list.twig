{% extends "base.twig" %}
{% block content %}
<table border="1" align="center" width="755">
    <thead>
        <tr>
            <th>ISBN</th>
            <th>Titolo</th>
            <th>Autore</th>
            <th>Editore</th>
            <th>Prezzo</th>
        </tr>
    </thead>
    {% for book in books %}
        <tr>
            <td>{{ book.ISBN }}</td>
            <td>{{ book.title }}</td>
            <td>{{ book.author }}</td>
            <td>{{ book.publisher }}</td>
            <td>{{ book.price }}</td>
        </tr>
    {% endfor %}
</table>

<p>{{ count }} libri presenti.</p>
{% endblock content %}