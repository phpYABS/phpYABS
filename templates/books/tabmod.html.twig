<form action="/books/{{book.ISBN}}/edit" method="post" class="book-form">
    <table>
        <tr>
            <th><label for="ISBN">{{ 'book.fields.isbn'|trans }}:</label></th>
            <td>{{ book.ISBN }}
                <input type="hidden" id="ISBN" name="ISBN" value="{{ book.ISBN }}">
            </td>
        </tr>
        <tr>
            <th><label for="title">{{ 'book.fields.title'|trans }}:</label></th>
            <td><input type="text" id="title" name="title" value="{{ book.title }}" required></td>
        </tr>
        <tr>
            <th><label for="author">{{ 'book.fields.author'|trans }}:</label></th>
            <td><input type="text" id="author" name="author" value="{{ book.author }}" required></td>
        </tr>
        <tr>
            <th><label for="publisher">{{ 'book.fields.publisher'|trans }}:</label></th>
            <td><input type="text" id="publisher" name="publisher" value="{{ book.publisher }}" required></td>
        </tr>
        <tr>
            <th><label for="price">{{ 'book.fields.price'|trans }}:</label></th>
            <td><input type="number" id="price" name="price" value="{{ book.price }}" step="0.01" required></td>
        </tr>
        <tr>
            <th><label for="rate">{{ 'book.fields.rating'|trans }}:</label></th>
            <td>
                <select id="rate" name="rate">
                    <option value="NULL" {{ selnull }}>{{ 'book.rating.none'|trans }}</option>
                    <option value="zero" {{ selzero }}>{{ 'book.rating.shredding'|trans }}</option>
                    <option value="rotmed" {{ selrotmed }}>{{ 'book.rating.medium_recycling'|trans }}</option>
                    <option value="rotsup" {{ selrotsup }}>{{ 'book.rating.superior_recycling'|trans }}</option>
                    <option value="buono" {{ selbuono }}>{{ 'book.rating.store_credit'|trans }}</option>
                </select>
            </td>
        </tr>
        <tr>
            <td><button type="submit">{{ 'book.actions.modify'|trans }}</button></td>
            <td><button type="reset">{{ 'book.actions.cancel'|trans }}</button></td>
        </tr>
    </table>
    <input type="hidden" name="Nome" value="Libri">
    <input type="hidden" name="Azione" value="Modifica">
</form>