{% extends 'base.twig' %}
{% block title %}Valutazione dei libri in acquisto{% endblock %}
{% block body_attr %}onLoad="document.libro.newISBN.focus()"{% endblock %}
{% block content %}
<font face="Arial, Helvetica, sans-serif">
    <h1 align="center">Valutazione dei libri in acquisto</h1>
    <h2 align="center">Acquisto NÂ° {{ purchase_id }}</h2>
    {% if errmsg %}
        <p align="center"><font color="RED">{{ errmsg }}</font></p>
    {% endif %}
    {% for acq in acquisto.acquisti %}
        {% include 'purchases/tabview.twig' with acq %}
    {% endfor %}
    {% if not trovato %}
        <script>alert('Libro non trovato!');</script>";
    {% endif %}
    <p align="center">{{ acquisto.numBook }} Libri acquistati<br>
        Totale contanti: {{ acquisto.bill.totalec | format_currency('EUR') }}
        Totale buono: {{ acquisto.bill.totaleb | format_currency('EUR') }}
        Totale rottamazione: {{ acquisto.bill.totaler | format_currency('EUR') }}</p>
    <div align="center">
        <form action="/purchases/current" method="post" name="libro">
            ISBN o EAN
            <input name="newISBN" type="text" maxlength="13">
            <input type="submit" value="Ok">
        </form>
    </div>
</font>
{% endblock content %}
